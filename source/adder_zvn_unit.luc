module adder_zvn_unit (
    input a[32],
    input b[32],
    input s[32],
    input alufn,
    output z,
    output v,
    output n
  ) {
  sig c, d, e; //connectors
  
  always {
    // z unit
    z = ~|s;
    
    // v unit
    c = alufn ^ b[31];
    d = c & a[31] & ~s[31];
    e = ~c & ~a[31] & s[31];
    v = d | e;
    
    // n unit
    n = s[31];
    
  }
}
